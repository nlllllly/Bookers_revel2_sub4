<div class="col-xs-12">
		<h2>Follower Users</h2>
		<!--users一覧 -->
		<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th colspan="3"></th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<tr>
					<td><%= attachment_image_tag(@user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
					<td><%= @user.name%></td>
					<td>フォロー数：<%= @user.follower.count %></td>
					<td>フォロワー数：<%= @user.followed.count %></td>
                    <td><%= link_to "Show", user_path(@user) %></td>
				</tr>
			</tbody>
		</table>
		<!--users一覧 -->
	</div>
</div>